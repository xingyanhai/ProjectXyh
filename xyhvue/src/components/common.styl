@import 'vars.styl'

html {
  height 100%
  text-size-adjust 100%
}

body {
  color $c-body
  font-size 14px
  font-family -apple-system-font, Helvetica Neue, Helvetica, sans-serif
  background-color $c-primary-background
}

* {
  margin 0
  padding 0
  box-sizing border-box
}

a img {
  border 0
}

a {
  color $c-primary-normal
  text-decoration none
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
}

ul {
  list-style: none
}

table {
  border-collapse collapse
  border-spacing 0
}

td,th {
  padding 0
}

// list--列表
.list-section
  .mint-cell-title
    padding 15px 0

// loading
.loading
  padding 20px 0
  text-align center

// header右边按钮
.herder-right-btn
  display inline-block
  height 24px
  color #fff
  padding: 0 15px
  line-height 24px
  border-radius: 11px
  background-color $c-primary-normal
